#include <esp_now.h>
#include <esp_wifi.h>

// Pin for the button on the first ESP32-C3
const int buttonPin = 2;

// Pin for the relay on the second ESP32-C3
const int relayPin = 4;

// MAC address of the second ESP32-C3
uint8_t broadcastAddress[] = {0xAA, 0xAA, 0xAA, 0xAA, 0xAA, 0xAA}; // Replace with your MAC address

bool relayState = false;

void setup() {
  Serial.begin(115200);
  pinMode(buttonPin, INPUT);
  pinMode(relayPin, OUTPUT);

  esp_now_init();
  
  esp_now_peer_info_t peerInfo;
  memcpy(peerInfo.peer_addr, broadcastAddress, 6);
  peerInfo.channel = 0;
  peerInfo.ifidx = ESP_IF_WIFI_STA;
  peerInfo.encrypt = false;

  esp_now_add_peer(&peerInfo);

  esp_now_register_recv_cb([](uint8_t* mac, uint8_t* data, uint8_t len) {
    if (len > 0) {
      relayState = (data[0] == 'O' && data[1] == 'N');
      digitalWrite(relayPin, relayState ? HIGH : LOW);
      Serial.println(relayState ? "Relay turned ON" : "Relay turned OFF");
    }
  });
}

void loop() {
  if (digitalRead(buttonPin) == HIGH) {
    uint8_t message[3] = {'O', relayState ? 'F' : 'N', '\0'};
    esp_now_send(broadcastAddress, message, sizeof(message));
    delay(1000);
  }

  delay(100);
}
